<?xml version="1.0" encoding="UTF-8"?>
<sqlmap xmlns="http://www.oksudio.com/sqlmap"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.oksutio.com/sqlmap http://www.oksutio.com/sqlmap/sqlmap.xsd">
	<sql key="userAdd">insert into users(id, name, password, level, login, recommend, email) values(?,?,?,?,?,?,?)</sql>
	<sql key="userGet">select * from users where id = ?</sql>
	<sql key="userDeleteAll">delete from users</sql>
	<sql key="userUpdate">update users set name=?,password=?,level=?,login=?,recommend=?,email=? where id=?</sql>
	<sql key="userGetCount">select count(1) from users</sql>
	<sql key="userGetAll">select * from users order by id</sql>	
</sqlmap>